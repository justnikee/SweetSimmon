generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                          Int       @id @default(autoincrement())
  title                       String
  description                 String
  price                       Int
  images                      String[]
  createdAt                   DateTime  @default(now())
  categoryId                  Int?
  benefits                    String[]
  clinicalStudies             String?
  details                     String?
  fullIngredients             String?
  howToUse                    String?
  inStock                     Boolean   @default(true)
  isSubscribable              Boolean   @default(false)
  keyIngredients              String?
  productType                 String?
  skinTypes                   String[]
  slug                        String?   @unique
  subscriptionDiscountPercent Int?
  subscriptionInterval        String?
  sustainablePackaging        String?
  updatedAt                   DateTime? @updatedAt
  volume                      String?
  tags                        String[]
  category                    Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  slug        String    @unique
  description String
  products    Product[]
}
